<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WheelsOndemand.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
    xmlns:views="clr-namespace:WheelsOndemand.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="LoginView"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />
    <ShellContent
        Title="CarListView"
        ContentTemplate="{DataTemplate views:CarListView}"
        Route="CarListView" />
    <ShellContent
        Title="Payment"
        ContentTemplate="{DataTemplate views:Payment}"
        Route="Payment" />
    <ShellContent
        Title="Topdeals"
        ContentTemplate="{DataTemplate views:TopDeals}"
        Route="TopDeals" />
    <ShellContent
        Title="CreateAccount"
        ContentTemplate="{DataTemplate views:CreateAccount}"
        Route="CreateAccount" />
    <ShellContent
        Title="AdminLogin"
        ContentTemplate="{DataTemplate views:AdminLogin}"
        Route="AdminLogin" />


</Shell>
