<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelsOndemand.Views.Admin_Login.xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Title and Logo -->
        <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Margin="10,0,0,0">
            
            <!-- Sign In Panel -->

            <Label Text="Username" FontAttributes="Bold" TextColor="OrangeRed" />
            <Entry  x:Name="UsernameTextBox" Margin="0,5,0,10"/>
            <Label Text="Password" FontAttributes="Bold" TextColor="OrangeRed"/>
            <Entry IsPassword="True" x:Name="PasswordBox" Margin="0,5,0,10"/>
            <Label Text="Company Code" FontAttributes="Bold" TextColor="OrangeRed"/>
            <Entry x:Name="CompanyCode" FontAttributes="Bold"  Margin="0,5,0,10"/>
            <Button Text="Sign In" HorizontalOptions="Center" Margin="0,10,0,0"  BackgroundColor="SkyBlue" />
            <Button Text="Create New Account" HorizontalOptions="Center" Margin="0,10,0,0"  BackgroundColor="skyBlue"/>
            
        </StackLayout>
    </Grid>
</ContentPage>
