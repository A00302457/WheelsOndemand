<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelsOndemand.Views.CarList"
             Title="CarList">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Title and Logo -->
        <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Margin="10,0,0,0">
            <Label Text="Car For Rent" FontSize="32" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="OrangeRed"/>
            <Image Source="audi.png" HeightRequest="50" WidthRequest="50" Margin="0,50,0,0"/>
            <Button Text="Audi $110 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Audi_Click" BackgroundColor="SkyBlue" />

            <Image Source="ram.jpg" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0"/>
            <Button Text="Ram $100 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Ram_Click" BackgroundColor="SkyBlue" />

            <Image Source="mazda.jpg" HeightRequest="50" WidthRequest="50" Margin="0,50,0,0"/>
            <Button Text="Mazda $90 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Mazda_Click" BackgroundColor="SkyBlue" />

            <Image Source="dough.jpg" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0"/>
            <Button Text="Dough $120 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Dough_Click" BackgroundColor="SkyBlue" />

            <Image Source="nissanrough.jpg" HeightRequest="50" WidthRequest="50" Margin="0,50,0,0"/>
            <Button Text="Nissan Rough $100 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="NissanRough_Click" BackgroundColor="SkyBlue" />

            <Image Source="bmw.jpg" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0"/>
            <Button Text="BMW $150 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="BMW_Click" BackgroundColor="SkyBlue" />

            <Image Source="lembergini.jpg" HeightRequest="50" WidthRequest="50" Margin="0,50,0,0"/>
            <Button Text="Lembergini $200 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Lembergini_Click" BackgroundColor="SkyBlue" />

            <Image Source="mercedes.jpg" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0"/>
            <Button Text="Mercedes $180 PD" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Mercedes_Click" BackgroundColor="SkyBlue" />


            <Button Text="Home" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Home_Click" BackgroundColor="SkyBlue" />




            <!-- Sign In Panel -->

            
        </StackLayout>

        <!-- Main Panel -->

    </Grid>

</ContentPage>