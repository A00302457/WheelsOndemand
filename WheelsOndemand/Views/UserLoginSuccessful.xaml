<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelsOndemand.Views.UserLoginSuccessful"
             Title="UserLoginSuccessful">
    <VerticalStackLayout>
        <Image Source="icon.png" HeightRequest="200" WidthRequest="200" ></Image>
        <Label Text="This was successfully completed"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Home" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Signin_Clicked"  BackgroundColor="SkyBlue" />
        <Button Text="Exit" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="Exit_Clicked"  BackgroundColor="SkyBlue" />
    </VerticalStackLayout>
</ContentPage>