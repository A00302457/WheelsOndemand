<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelsOndemand.Views.CreateAccount"
             Title="CreateAccount">
    <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Margin="10,0,0,0">

        <!-- Sign In Panel -->
        <Label Text="Create Your Account" FontSize="Large" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="OrangeRed" />

        <Label Text="Username" FontAttributes="Bold" TextColor="OrangeRed" />
        <Entry  x:Name="UsernameTextBox" Margin="0,5,0,10"/>
        <Label Text="Password" FontAttributes="Bold" TextColor="OrangeRed"/>
        <Entry IsPassword="True" x:Name="PasswordBox" Margin="0,5,0,10"/>
        <Label Text="ConfirmPassword" FontAttributes="Bold" TextColor="OrangeRed" />
        <Entry  x:Name="ConfirmPassword" Margin="0,5,0,10"/>

        <Button Text="Create New Account" HorizontalOptions="Center" Margin="0,10,0,0" Clicked="CreateNewAccount_Click" 
         BackgroundColor="skyBlue"/>

        <Label Text="wheelondemand@cars.ca" HorizontalOptions="Center" Margin="0,10,0,0" TextColor="OrangeRed"/>
    </StackLayout>
</ContentPage>